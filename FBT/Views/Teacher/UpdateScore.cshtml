@model FBT.Models.Score

@{
    ViewData["Title"] = "Update Score";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<h2 style="text-align: center; margin: 20px 0;">Cập nhật điểm học sinh</h2>

@using (Html.BeginForm("UpdateScore", "Teacher", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="studentId">Student Name: @ViewBag.StudentName</label>
        <input type="text" name="studentId" class="form-control" hidden readonly value="@ViewBag.StudentId" required />
    </div>

    <div class="form-group">
        <label for="subjectId">Subject:</label>
        @Html.DropDownList("subjectId", (SelectList)ViewBag.Subjects, "Select a Subject", new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="Coefficient1" class="control-label col-md-2">Điểm 15 phút :</label>
        <div class="col-md-10">
            <input type="text" id="Coefficient1" name="Coefficient1" class="form-control" value="@ViewBag.ExistingScore1" />
        </div>
    </div>

    <div class="form-group">
        <label for="Coefficient2" class="control-label col-md-2">Điểm 1 tiết:</label>
        <div class="col-md-10">
            <input type="text" id="Coefficient2" name="Coefficient2" class="form-control" value="@ViewBag.ExistingScore2" />
        </div>
    </div>

    <div class="form-group">
        <label for="Coefficient3" class="control-label col-md-2">Điểm học kỳ:</label>
        <div class="col-md-10">
            <input type="text" id="Coefficient3" name="Coefficient3" class="form-control" value="@ViewBag.ExistingScore3" />
        </div>
    </div>

    <div class="form-group">
        <label for="semester">Semester:</label>
        @Html.DropDownList("semester", new List<SelectListItem>
    {
    new SelectListItem { Text = "1", Value = "1" },
    new SelectListItem { Text = "2", Value = "2" }
    }, "Select a Semester", new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

<div class="back-link">
    <a href="@ViewBag.ViewScoresUrl">Bảng điểm lớp</a>
</div>


