@model IEnumerable<FBT.Models.Account>

@{
    ViewData["Title"] = "Index1";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .heading{
        text-align: center;
        padding: 10px;
    }
    tbody td{
        line-height: 40px;
    }
</style>

<h1 class="heading">Quản Lý Account</h1>

<button class="btn btn-dark" style="float:right; margin-right:20px">
    <a asp-controller="Admin" asp-action="Create" style="color:#fff; text-decoration: none;"><i class="fa-solid fa-plus"></i> Tạo Account Mới</a>
</button>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.AccountId)
            </th>
            <th>
                Họ Và Tên
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                Vai Trò
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.AccountId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AccountNavigation.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @if (item.Role == 0)
                {
                    <text>Học Sinh</text>
                }
                else if (item.Role == 1)
                {
                    <text>Phụ Huynh</text>
                }
                else if (item.Role == 2)
                {
                    <text>Giáo Viên</text>
                }
                else if (item.Role == 3)
                {
                    <text>Admin</text>
                }
                else
                {
                    <text>Unknown Role</text>
                }
            </td>
            <td>
                <a asp-controller="Admin" asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-primary">Cập Nhật</a> |
                <a asp-controller="Admin" asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-primary">Chi Tiết</a> |
                <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-primary">Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>
