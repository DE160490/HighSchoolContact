@model FBT.Models.PersonInformation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div style="padding: 20px">
    <h3 style="text-align: center;padding: 20px;">xác nhận Xoá tài Khoản Này</h3>
    <h4>Thông Tin Sơ Lược</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fullname)
        </dd>

        <!-- Display other fields as needed -->

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Gender == true)
            {
                <text>Nam</text>
            }
            else
            {
                <text>Nữ</text>
            }
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <input type="submit" value="Xoá" class="btn btn-danger" />
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Quay Về</a>
        </div>
    </form>
</div>

