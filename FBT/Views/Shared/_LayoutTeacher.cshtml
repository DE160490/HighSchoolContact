<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:500,400,600|Manrope:600" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="~/css/layout.css">
    <title>Home</title>
</head>
<body>
    @{
        var teacherID = @ViewData["Avatar"];
        var imgString = $"~/img/Teacher/{teacherID}.png";
    }
    <div class="container-fuild">
        <div class="header">
            <div class="navbar_action">
                <div class="manager_user">
                    <a class="icon_notification" href="#"> <i class="fa-regular fa-bell"></i> </a>
                    <a class="user" href="#">
                        <div class="avatar">
                            <img class="img" src="~/img/Teacher/HSE0000001.png" alt="Avatar">
                        </div>
                        <div class="text_avatar">
                            Teacher <i class="fa-solid fa-caret-down"></i>
                        </div>
                    </a>
                </div>
                <div class="logout_form">
                    <a class="logout" asp-controller="Logout" asp-action="Logout"> <i class="fa-solid fa-arrow-right-from-bracket"></i> Đăng xuất </a>
                </div>
            </div>
        </div>
        <div class="navbar_menus">
            <a class="logo" href="#"><img src="~/img/Shared/Logo_ High School Contact.png" alt="Logo" srcset=""></a>
            <div class="menus">
                <ul>
                    <li><a asp-controller="Teacher" asp-action="Index" asp-route-id="@teacherID"><i class="fa-solid fa-house"></i> Thống kê tổng quan</a></li>
                    <li><a asp-controller="Teacher" asp-action="TeacherTimeTable"><i class="fa-solid fa-calendar-days"></i> Lịch dạy </a></li>
                    <li>
                        <a class="menu1" asp-controller="Teacher" asp-action="ViewSubjectClasses" asp-route-id="@teacherID">
                            <i class="fa-solid fa-book-open"></i> Bảng điểm
                        </a>
                    </li>
                    <li>
                        <a class="menu1" asp-controller="Teacher" asp-action="ViewClassList" asp-route-id="@teacherID">
                            <i class="fa-solid fa-book-open"></i> Danh sách lớp do bạn chủ nhiệm
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
